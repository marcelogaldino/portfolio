{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <title>Portfolio | Marcelo Galdino</title>
{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Artigos</h1>
    </div>

    <section class="cards" id="https://miro.medium.com/max/2560/0*nwlsfa0hEsSQihqw">

        {% for item in items %}
        <div class="card">

            <div class="card__image-container {{ 'featured-wrapper' if item.featured }}">
                <img src="{{ item.link }}" alt="{{ item.title }}">
                {% if item.featured %}
                    <div class="featured">NEW</div>
                {% endif %}
            </div>
        
            <div class="card__content">
                <p>{{ item.title }}</p>
            </div>
        
            <div class="card__info">
                <p>{{ item.duration }}</p>
                <p class="card__price">{{ item.price }}</p>
            </div>

        </div>
        {% endfor %}

        
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
                <iframe src="https://medium.com/@oficialmarcelog/afinal-o-que-e-javascrpit-b684542dbab3?source=friends_link&sk=61a17e9ac0e89aae8c5065ed3dd2d2a8" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/script.js"></script>

{% endblock %}
